@model List<Persona>
@{
}
<form action="Insertar" method="post">
    <table>
        <tr>
            <td>Ingrese Nombre: </td>
            <td><input type="text" name="nombre" /></td>
            <td>Ingrese DPI: </td>
            <td><input type="text" name="DPI" /></td>
            <td>Ingrese Edad: </td>
            <td><input type="text" name="edad" /></td>
            <td>Ingrese Profesion: </td>
            <td><input type="text" name="profesion" /></td>
        </tr>
        <tr>
            <input type="submit" value="Enviar" />
        </tr>
    </table>
</form> 

@if (Model != null)
{
            <table class="table table-hover">
                    <thead>
                        <tr>
                            <td>Nombre</td>
                            <td>DPI</td>
                            <td>Edad</td>
                            <td>Profesion</td>
                        </tr>
                    </thead>

        @foreach (var personaActual in Model)
        {
                                <tr>
                                    <td>@personaActual.Nombre</td>
                                    <td>@personaActual.DPI</td>
                                    <td>@personaActual.Edad</td>
                                    <td>@personaActual.Profesion</td>
                                </tr>
        }

                </table>
}